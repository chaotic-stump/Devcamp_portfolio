<%= form_with(model: @portfolio_item) do |form| %>
  <div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <%= form.label :title, style: "display: block" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :subtitle, style: "display: block" %>
      <%= form.text_field :subtitle, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :main_image, style: "display: block" %>
      <%= form.file_field :main_image, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :thumb_image, style: "display: block" %>
      <%= form.file_field :thumb_image, class: "form-control" %>
    </div>
  </div>

  <div class="col-md-6">
    <div class="form-group">
      <%= form.label :body, style: "display: block" %>
      <%= form.text_area :body, class: "form-control" %>
    </div>
  </div>

  <div class="col-md-12">
    <hr />

    <h2>Technologies Used:</h2>

    <div>
    <%= form.fields_for :technologies do |technology_form| %>
    <div class="form-group">
      <%= technology_form.label :name %>
      <%= technology_form.text_field :name, class: "form-control" %>
    </div>
    <% end %>
    
    <div class="form-group">
      <%= form.submit 'Save Portfolio Item', class: 'btn btn-primary mt-3' %>
    </div>
  </div>

    
  </div>
<% end %>
