<h1>Angular Portfolio Items</h1>

<%= button_to "Create New Item", new_portfolio_path if logged_in?(:site_admin) %>

<%= @angular_portfolio_items.each do |portfolio_item| %>
  <p><%= link_to portfolio_item.title,  portfolio_show_path(portfolio_item) %></p>
  <p><%= portfolio_item.subtitle %></p>
  <p><%= portfolio_item.body %></p>
  <%= image_tag portfolio_img(@portfolio_item.thumb_image.url, 'thumb') %>
  <%= button_to "Edit Portfolio Item", edit_portfolio_path(portfolio_item) if logged_in?(:site_admin) %>
  <%= button_to "Delete Post", portfolio_path(portfolio_item), method: :delete, data: { turbo_method: 'delete', turbo_confirm: 'Are you sure?' } if logged_in?(:site_admin) %>
<% end %>